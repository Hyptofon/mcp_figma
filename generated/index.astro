---
import '../styles/global.css';
import { SiteHeader } from '../components/sections/SiteHeader.tsx';
import { HeroSection } from '../components/sections/HeroSection.tsx';
import { ProgramsSection } from '../components/sections/ProgramsSection.tsx';
import { PartnersSection } from '../components/sections/PartnersSection.tsx';
import { DepartmentsSection } from '../components/sections/DepartmentsSection.tsx';
import { LeadershipSection } from '../components/sections/LeadershipSection.tsx';
import { StatsSection } from '../components/sections/StatsSection.tsx';
import { NewsSection } from '../components/sections/NewsSection.tsx';
import { SiteFooter } from '../components/sections/SiteFooter.tsx';

const title = "ІІТБ — Інститут інформаційних технологій та бізнесу";
const description = "Обирай навчання, яке відповідає викликам майбутнього. IT, бізнес, менеджмент, фінанси, маркетинг.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="antialiased bg-black text-foreground">
    <main class="min-h-screen w-full">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <SiteHeader client:load />
        <HeroSection />
        <ProgramsSection />
        <PartnersSection />
        <DepartmentsSection client:load />
        <LeadershipSection />
        <StatsSection client:load />
        <NewsSection client:load />
        <SiteFooter client:load />
      </div>
    </main>
  </body>
</html>
